<% provide(:title, "Alexander Hughes - Portfolio") %>

<script type="text/javascript">
$(document).ready(function(){
	$('.bio-page').hide()
	$('.code-page').hide()
	
	$('.bio').click(function(){
		$('.bio-page').show();
		$('.contact-page').hide();
		$('.code-page').hide();
		});
	
	$('.contact').click(function(){
		$('.contact-page').show();
		$('.bio-page').hide();
		$('.code-page').hide();
		});
	
	$('.code').click(function(){
		$('.contact-page').hide();
		$('.bio-page').hide();
		$('.code-page').show()
		});
	});
</script>

<body>
<div class="sections"><div class="code">CODE</div></div>
<div class="sections"><div class="bio">BIO</div></div>
