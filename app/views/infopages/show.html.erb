<% provide(:title, "Alexander Hughes - Portfolio") %>

<script type="text/javascript">
$(document).ready(function(){
	$('.bio-page').hide()
	$('.code-page').hide()
	
	$("a.bio").click(function(){
		$('.bio-page').show();
		$('.contact-page').hide();
		$('.code-page').hide();
		});
	
	$("a.contact").click(function(){
		$('.contact-page').show();
		$('.bio-page').hide();
		$('.code-page').hide();
		});
	
	$("a.code").click(function(){
		$('.contact-page').hide();
		$('.bio-page').hide();
		$('.code-page').show()
		});
	});
</script>

